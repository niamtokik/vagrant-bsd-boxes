{ 
  "variables": {
    "os_type": "DragonFlyBSD_64",
    "repository": "mirror-master.dragonflybsd.org",
    "release": "5.8.0",
    "arch": "x86_64",
    "checksum": "4c14c4e7395c6b85f95f7dc86ad9455a",
    "checksum_type": "md5",
    "root_password": "vagrant",
    "user_password": "vagrant"
  },
  "builders": [{
    "type": "virtualbox-iso",
    "guest_os_type": "{{user `os_type`}}",
    "iso_url": "https://{{user `repository`}}/iso-images/dfly-{{user `arch`}}-{{user `release`}}_REL.iso",
    "iso_checksum": "{{user `checksum`}}",
    "iso_checksum_type": "{{user `checksum_type`}}",
    "ssh_username": "vagrant",
    "ssh_password": "{{user `user_password`}}",
    "boot_wait": "40s",
    "boot_command": [
      "installer<enter><wait10s>",
      "<enter><wait5s>",
      "<enter><wait5s>",
      "<enter><wait5s>",
      "<enter><wait5s>",
      "<enter><wait10s>",
      "<enter><wait5s>",
      "<up><enter><wait5s>",
      "<enter><wait5s>",
      "<enter><wait5s>",
      "<enter><wait30s>",
      "<enter><wait5m>",
      "<enter><wait>",
      "<enter><wait>",
      "<enter><wait>",
      "<up><up><up><up><up><enter><wait>",
      "<enter><wait>",
      "<down><down><down><enter><wait>",
      "{{user `root_password`}}<enter><wait>",
      "{{user `root_password`}}<enter><wait>",
      "<enter><wait>",
      "<enter><wait>",
      "<down><down><down><down><enter><wait>",
      "vagrant<down><wait>",
      "vagrant<down><wait>",
      "{{user `user_password`}}<down><wait>",
      "{{user `user_password`}}<down><wait>",
      "<down><wait>",
      "<down><wait>",
      "<down><wait>",
      "<down><wait>",
      "<down><wait>",
      "<down><wait>",
      "<left><enter><wait>",
      "<enter><wait>",
      "<down><down><down><down><down><enter><wait>",
      "<enter><wait>",
      "<enter><wait10s>",
      "<enter><wait>",
      "<up><enter><wait>",
      "<right><right><right><right><enter><wait>",
      "<enter><wait30s>",
      "<enter><wait1m>"
    ]}
  ],
  "provisioners": [  
     { "type": "shell",
       "inline": ["uname -a"] }
  ],
  "post-processors": ["vagrant"]
}
